<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgNhanVien"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_nhanvien" />

        <TextView
            android:id="@+id/tvTenNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgNhanVien"
            android:layout_marginStart="12dp"
            android:text="Tên nhân viên"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMaNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvTenNhanVien"
            android:layout_alignParentEnd="true"
            android:text="NV001"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenNhanVien"
            android:layout_toEndOf="@id/imgNhanVien"
            android:layout_marginStart="12dp"
            android:text="Địa chỉ"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDiaChi"
            android:layout_toEndOf="@id/imgNhanVien"
            android:layout_marginStart="12dp"
            android:text="Lương"
            android:textColor="#FF5722"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvChucVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLuong"
            android:layout_toEndOf="@id/imgNhanVien"
            android:layout_marginStart="12dp"
            android:text="Chức vụ"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnSuaNV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvMaNhanVien"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/btnXoaNV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:layout_toStartOf="@id/btnSuaNV"
            android:layout_alignTop="@id/btnSuaNV"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


