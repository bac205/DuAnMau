<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgDanhMuc"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_danhmuc" />

        <TextView
            android:id="@+id/tvTenDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgDanhMuc"
            android:layout_marginStart="12dp"
            android:text="Tên danh mục"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMaDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvTenDanhMuc"
            android:layout_alignParentEnd="true"
            android:text="DM001"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnSuaDM"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_below="@id/tvMaDanhMuc"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/btnXoaDM"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:layout_toStartOf="@id/btnSuaDM"
            android:layout_alignTop="@id/btnSuaDM"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>




