<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_product" />

        <TextView
            android:id="@+id/tvTenSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgSanPham"
            android:layout_marginStart="12dp"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGiaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenSP"
            android:layout_toEndOf="@id/imgSanPham"
            android:layout_marginStart="12dp"
            android:text="Giá: 0 VNĐ"
            android:textSize="14sp"
            android:textColor="#FF5722" />

        <TextView
            android:id="@+id/tvThanhTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGiaSP"
            android:layout_toEndOf="@id/imgSanPham"
            android:layout_marginStart="12dp"
            android:text="Thành tiền: 0 VNĐ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

        <!-- Nút tăng giảm số lượng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvTenSP"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnGiam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#FF5722" />

            <TextView
                android:id="@+id/tvSoLuong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btnTang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50" />
        </LinearLayout>

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvThanhTien"
            android:text="Xóa"
            android:textSize="12sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
