<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#D4E8F8"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📊 Thống kê doanh thu"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="20dp" />

    <!-- Text hiển thị doanh thu, ẩn lúc đầu -->
    <TextView
        android:id="@+id/tvDoanhthuthongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng doanh thu: 0 VNĐ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E53935"
        android:visibility="gone"
        android:layout_marginBottom="20dp" />

    <!-- Nút xem doanh thu -->
    <Button
        android:id="@+id/btnXemDoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem doanh thu"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
