<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_image_placeholder" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgSanPham"
            android:layout_marginStart="12dp"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/imgSanPham"
            android:layout_toStartOf="@+id/btnSua" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/tvGiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenSanPham"
            android:layout_toEndOf="@id/imgSanPham"
            android:layout_marginStart="12dp"
            android:text="Giá: 100.000đ"
            android:textColor="#FF5722"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/btnSua" />
        <!-- Icon sửa (ngoài cùng bên phải) -->
        <ImageView
            android:id="@+id/btnSua"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvTenSanPham"
            android:layout_marginEnd="8dp" />

        <!-- Icon xoá (nằm bên trái của sửa) -->
        <ImageView
            android:id="@+id/btnXoa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:layout_toStartOf="@id/btnSua"
            android:layout_alignTop="@id/tvTenSanPham"
            android:layout_marginEnd="8dp" />

        <!-- Icon giỏ hàng (nằm bên trái của xoá) -->
        <ImageView
            android:id="@+id/imgGioHang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            android:layout_toStartOf="@id/btnXoa"
            android:layout_alignTop="@id/tvTenSanPham"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
